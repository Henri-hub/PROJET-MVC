<section class="section">
    <div class="container is-fullhd">
        <form action="/article/edit/{{henri._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="field">
                <label class="label">Titre de l'article</label>
                <div class="control">
                    <input class="input" type="text" name="title" value="{{henri.title}}">
                </div>
            </div>
            <div class="field">
                <label class="label">Contenu</label>
                <div class="control">
                    <textarea class="textarea" name="content">{{henri.content}}</textarea>
                    <script>
                        CKEDITOR.replace('content');
                    </script>
                </div>
            </div>
            <div class="field">
                <label class="label">Auteur</label>
                <div class="control">
                    <input class="input" type="text" name="author" value="{{henri.author}}">
                </div>
            </div>
            <div class="file">
                <label class="file-label">
                    <input class="file-input" type="file" name="image" value="{{henri.image}}">
                    <span class="file-cta">
                        <span class="file-icon">
                            <i class="fas fa-upload"></i>
                        </span>
                        <span class="file-label">
                            Envoyer une image au format jpg
                        </span>
                    </span>
                </label>
            </div>
            <div class="fiel is-grouped">
                <div class="control">
                    <button class="button is-link">Modifier</button>
                </div>
                <div class="control">
                    <button class="button is-text">Annuler</button>
                </div>

            </div>
        </form>
    </div>
</section>